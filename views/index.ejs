      /> -->
  </div>

  <!-- categories -->
  <div class="categories">
    <div class="row">
      <div class="col-lg-4 col-md-12 img-hover-zoom--colorize">
        <form class="categories-form" action="/gk" method="POST">
          <button class="btn" type="submit">
            <!-- <div class="img-hover-zoom--colorize"> -->
            <img src="https://cdn2.iconfinder.com/data/icons/online-education-2-1/64/knowledge_growth1-512.png" alt=""
              width="150px" />
            <!-- </div> -->
            <br /><br />
            <p class="topic">General Knowledge</p>
          </button>
        </form>
      </div>
      <div class="col-lg-4 col-md-12 img-hover-zoom--colorize">
        <form class="categories-form" action="/scienceNature" method="POST">
          <button class="btn" type="submit">
            <!-- <div class="img-hover-zoom--colorize"> -->
            <img
              src="https://previews.123rf.com/images/batsheba/batsheba1606/batsheba160600005/58458584-open-book-and-nature-landscape-of-hills-and-rainbow-science-and-nature-study-illustration-ecology-an.jpg"
              alt="" width="200px" />
            <!-- </div> -->
            <br /><br />
            <p class="topic">Science & Nature</p>
          </button>
        </form>
      </div>

      <div class="col-lg-4 col-md-12 img-hover-zoom--colorize">
        <form class="categories-form" action="/sports" method="POST">
          <button class="btn" type="submit">
            <!-- <div class="img-hover-zoom--colorize"> -->
            <img src="https://img.freepik.com/free-vector/sport-equipment-concept_1284-13034.jpg" alt=""
              width="150px" />
            <!-- </div> -->
            <br /><br />
            <p class="topic">Sports</p>
          </button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-md-12 img-hover-zoom--colorize">
        <form class="categories-form" action="/maths" method="POST">
          <button class="btn" type="submit">
            <!-- <div class="img-hover-zoom--colorize"> -->
            <img src="https://cdn3.iconfinder.com/data/icons/education-flat-icon/130/95-512.png" alt="" width="150px" />
            <!-- </div> -->
            <br /><br />
            <p class="topic">Mathematics</p>
          </button>
        </form>
      </div>
      <div class="col-lg-6 col-md-12 img-hover-zoom--colorize">
        <form class="categories-form" action="/history" method="POST">
          <button class="btn" type="submit">
            <!-- <div class="img-hover-zoom--colorize"> -->
            <img src="https://i.pinimg.com/originals/2d/a0/96/2da0963c0c294434634fef5100fed3e2.png" alt=""
              width="150px" />
            <!-- </div> -->
            <br /><br />
            <p class="topic">History</p>
          </button>
        </form>
      </div>
    </div>
  </div>
  <div id="custom" class="form-area">
    <div class="row">
      <div class="col-lg-6">
        <h1>Create your own challenge!</h1>
        <br><br>
        <p class="description">- Challenge your friends with your own custom questions.</p>
        <p class="description">- Take fun challenges from your friends.</p>
      </div>
      <div class="col-lg-6" style="text-align: center;">
        <br><br><br><br>
        <button class="btn btn-lg btn-outline-primary" data-toggle="modal" data-target="#createQuiz"
          aria-haspopup="true" aria-expanded="false" style="width: 50%;"><strong>Create
            quiz</strong></button>
        <br><br><br>
        <button class="btn btn-lg btn-outline-success" data-toggle="modal" data-target="#takeQuiz" aria-haspopup="true"
          aria-expanded="false" style="width: 50%;"><strong>Take quiz</strong></button>
      </div>
    </div>
  </div>
  <!-- Modal -->
  <div class="container">
    <div class="modal fade" id="takeQuiz">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- header -->
          <div class="modal-header text-center">
            <h3 class="modal-title text-center">Take quiz</h3>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <!-- body -->
          <div class="modal-body">
            <form role="form" action="/takeQuiz" method="POST">
              <div class="form-group">
                <label for="email">Enter referral code</label>
                <input type="text" class="form-control" name="code" required>
              </div>
              <button type="submit" class="btn btn-dark">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--  -->
  <div class="container">
    <div class="modal fade" id="createQuiz">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- header -->
          <div class="modal-header text-center">
            <h3 class="modal-title text-center">Create quiz</h3>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <!-- body -->
          <div class="modal-body">
            <form role="form" action="/createQuiz" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <div class="form-row">
                  <label for="">Upload a json file</label>
                  <p><strong>Note:</strong> Make sure that the uploaded json file matches the correct format. Click <a
                      href="/sample.json" target="blank">here</a> to see an example.</p>
                  <div class="custom-file mb-3">
                    <input style="cursor: pointer" type="file" class="custom-file-input" id="customFile"
                      name="filetoupload" accept=".json" required />
                    <label class="custom-file-label" for="customFile">Choose file</label>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-dark">Upload</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
